public void equipItem(String itemName)
{
    Room currentRoom = gameMap.get(currentRoomID);

    Item item = currentRoom.getItem(itemName);

    if (item == null) {
        System.out.println("There is no item with that name here.");
        return;
    }

    equippedItem = item;
    System.out.println("You equipped: " + item.getItemName());
}

public void unequipItem(String itemName)
{
    if (equippedItem == null) {
        System.out.println("You have no item equipped.");
        return;
    }

    System.out.println("You unequipped: " + equippedItem.getItemName());
    equippedItem = null;
}


